<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/sikdangChoice_menuLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/sikdangImage"
            android:layout_width="150dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/store_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sikdangName"
                        android:layout_width="match_parent"
                        android:layout_height="77dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/menu_font"
                        android:text="식당이름" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/reqMenu1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="대표메뉴1" />

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/reqMenu2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="대표메뉴2" />

                    <TextView
                        android:visibility="visible"

                        android:id="@+id/reqMenu3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="대표메뉴3" />

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/reqMenu4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="대표메뉴4" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/sikdangChoice_menuLine_dist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="거리" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/sikdangChoice_menuLine_park"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="주차" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/sikdangChoice_menuLine_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="쿠폰" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/sikdangChoice_menuLine_event"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="이벤트" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>