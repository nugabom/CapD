<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entLayout"
    android:layout_width="600dp"
    android:layout_height="690dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="변경전"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/beforeChangeImage"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                app:srcCompat="@drawable/foodimage" />

            <TextView
                android:id="@+id/beforeNameTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="변경전메뉴이름"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/beforePriceTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="변경전가격"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/beforeExpTV"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="변경전설명"
                android:textSize="24sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/beforeIngRV"
                android:layout_width="match_parent"
                android:layout_height="195dp" />

            <Button
                android:id="@+id/meCancelBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="취소"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="변경후"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/afterChangeImage"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <EditText
                android:id="@+id/afterNameET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true"
                android:text="Name" />

            <EditText
                android:id="@+id/afterPriceET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true" />

            <EditText
                android:id="@+id/afterExpET"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:selectAllOnFocus="true"
                android:text="Name" />

            <Button
                android:id="@+id/meEditIngBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="재료 변경" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/afterIngRV"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <Button
                android:id="@+id/meChangeBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="변경"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/meDeleteBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="메뉴 삭제"
        android:textSize="24sp" />

</LinearLayout>