<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/iceberg_white_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        android:background="@color/white"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="product"
                android:fontFamily="@font/menu_font"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_exp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="product_exp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10000ì›"
                    android:fontFamily="@font/menu_font"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/maple_color"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/menu_image"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/food_placeholder"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>