<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="800dp"
    android:layout_height="460dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/am_imageView"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/foodimage" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="메뉴 이름"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/am_menuName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="가격"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/am_price"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="메뉴 설명"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/am_menuEXP"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:ems="10"
                android:inputType="textMultiLine" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/am_RV"
                android:layout_width="200dp"
                android:layout_height="340dp">

            </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/am_setIngBtn"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="재료설정"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/am_addBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="추가"
            android:textSize="24sp" />

        <Button
            android:id="@+id/am_calcelBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="취소" />
    </LinearLayout>
</LinearLayout>